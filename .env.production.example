# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.production and update with your production values

# Node Environment
NODE_ENV=production

# ===========================================
# PORT CONFIGURATION
# ===========================================

# Frontend application port (inside container)
FRONTEND_PORT=3000

# Host port mapping (external port on your machine)
HOST_PORT=3000

# Backend API port
BACKEND_PORT=9000

# ===========================================
# API ENDPOINTS (Production)
# ===========================================

# Backend API URL (REQUIRED) - your production backend server
NEXT_PUBLIC_BACKEND_URL=https://your-backend-api.com

# Legacy API URL configuration
NEXT_PUBLIC_API_URL=https://your-api.com

# Google Maps API Key (OPTIONAL - for map features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Wialon API Configuration (OPTIONAL - for direct Wialon integration)
WIALON_API_URL=https://hst-api.wialon.com/wialon/ajax.html
WIALON_TOKEN=

# HolidayTaxis API Configuration (OPTIONAL - for booking integration)
HOLIDAYTAXIS_API_URL=https://suppliers.htxstaging.com
HOLIDAYTAXIS_API_KEY=

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Container name for production
CONTAINER_NAME=holiday-taxis-frontend

# Docker network name
DOCKER_NETWORK=holiday-taxis-network

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# API request timeout (milliseconds)
API_TIMEOUT=30000

# ===========================================
# HEALTHCHECK CONFIGURATION
# ===========================================

# Healthcheck interval (seconds)
HEALTHCHECK_INTERVAL=30

# Healthcheck timeout (seconds)
HEALTHCHECK_TIMEOUT=10

# Healthcheck retries before marking unhealthy
HEALTHCHECK_RETRIES=3

# Healthcheck start period (seconds)
HEALTHCHECK_START_PERIOD=40
